#!/usr/bin/env php

<?php

$autoloadLocal = __DIR__ . '/../vendor/autoload.php';
$autoloadGlobal = getenv('COMPOSER_HOME') . '/vendor/autoload.php';

if (file_exists($autoloadLocal)) {
    require $autoloadLocal;
} elseif (file_exists($autoloadGlobal)) {
    require $autoloadGlobal;
} else {
    echo 
    "Не найден autoload \n" .
    "При локальной установке попробуйте composer install\n" .
    "При глобальной composer install global\n";
    exit(1);
}

use function Darkflade\Tic_tac_toe\Controller\startGame;

startGame();
